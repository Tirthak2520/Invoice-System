<%@ Page Language="C#" AutoEventWireup="true" CodeBehind="User.aspx.cs" MasterPageFile="~/Master/Site.Master" Inherits="InvoiceSystem.User" %>

<asp:Content ID="BodyContent" ContentPlaceHolderID="MainContent" runat="server">
    <div class="text-center" style="text-align: center">
        <div class="container">
            <asp:Button class=" btn btn-lg btn-info text-uppercase" ID="Add" Text="Add" runat="server" Style="margin-right: -900px" OnClick="Button_Click" Width="100px" Height="40px" />
            <br />
            <br />
            <br />

            <asp:GridView CssClass="table table-hover table table-dark table-striped" ID="Grid1" AllowPaging="True" PageSize="5" runat="server"
                AutoGenerateColumns="False" DataKeyNames="U_ID" OnRowDataBound="Grid1_RowDataBound" OnRowDeleting="Grid1_RowDeleting"
                DataSourceID="SqlDataSource1" Height="269px" Width="1075px"
                ItemStyle-BorderWidth="3px" BorderWidth="3px" BackColor="#FFCC99" AutoGenerateEditButton="true" AutoGenerateDeleteButton="true">
                <Columns>
                    <asp:BoundField DataField="U_ID" HeaderText="User ID" ReadOnly="True" SortExpression="U_ID" ItemStyle-BorderWidth="3px"></asp:BoundField>
                    <asp:BoundField DataField="First_Name" HeaderText="First Name" SortExpression="First_Name" ItemStyle-BorderWidth="3px"></asp:BoundField>
                    <asp:BoundField DataField="Last_Name" HeaderText="Last Name" SortExpression="Last_Name" ItemStyle-BorderWidth="3px"></asp:BoundField>
                    <asp:BoundField DataField="Email" HeaderText="Email" SortExpression="Email" ItemStyle-BorderWidth="3px"></asp:BoundField>
                    <asp:BoundField DataField="Password" HeaderText="Password" SortExpression="Password" ItemStyle-BorderWidth="3px" DataFormatString="*****" ReadOnly="False" InsertVisible="True"></asp:BoundField>
                    <asp:CheckBoxField DataField="Active" HeaderText="Active" SortExpression="Active" ItemStyle-BorderWidth="3px"></asp:CheckBoxField>
                </Columns>
                <PagerSettings FirstPageText="First" LastPageText="Last" Mode="NextPrevious" NextPageText="Next" PreviousPageText="Previous" />
                <PagerStyle ForeColor="Black" HorizontalAlign="Center" />
            </asp:GridView>

            <asp:SqlDataSource ID="SqlDataSource1" runat="server" ConnectionString="<%$ ConnectionStrings:My projectConnectionString %>" SelectCommand="SELECT [U_ID], [First_Name], [Last_Name], [Email],[Password], [Active] FROM [User_Master]"
                DeleteCommand="Delete from [User_Master] where [U_ID]=@U_ID" UpdateCommand="Update User_Master SET First_Name=@First_Name,Last_Name=@Last_Name,Email=@Email,Password=@Password,Active=@Active Where U_ID=@U_ID"></asp:SqlDataSource>

            <div class="alert-success form-group" style="width: 320px; border-radius: 5px; text-align: center">
                <asp:Label ID="Label1" runat="server" Style="text-align: center" Font-Bold="True"></asp:Label>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        document.getElementsByClassName("header-text")[0].innerHTML = " Manage User";
    </script>
</asp:Content>
